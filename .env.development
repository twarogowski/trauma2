# Development Environment Configuration
# Use this when running the app on host with: bun run dev

# Server
NODE_ENV=development
PORT=3000
HOST=localhost

# SurrealDB (localhost, not docker service name)
SURREALDB_URL=ws://localhost:8000/rpc
SURREALDB_NAMESPACE=trauma2
SURREALDB_DATABASE=dev
SURREALDB_ROOT_USER=root
SURREALDB_ROOT_PASSWORD=root
SURREALDB_POOL_SIZE=5
SURREALDB_POOL_TIMEOUT=5000

# Auth
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=admin123
JWT_SECRET=dev-secret-key-change-in-prod-min-32-chars-long
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=30d

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Swagger
SWAGGER_ENABLED=true
SWAGGER_PATH=/docs
